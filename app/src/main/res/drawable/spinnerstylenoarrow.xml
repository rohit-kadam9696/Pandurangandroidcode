<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinnerbgcolor" />

            <size
                android:width="@dimen/width"
                android:height="@dimen/height" />
            <corners android:radius="@dimen/spinnercornor" />

            <padding android:left="@dimen/spinnerpaddingleft" />

            <stroke
                android:width="@dimen/spinnerstorkewidth"
                android:color="@color/spinnerstrokecolor" />
        </shape>
    </item>


</layer-list>