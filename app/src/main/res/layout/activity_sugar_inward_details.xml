                    app:layout_constraintLeft_toRightOf="@+id/txtcollon5"
                    app:layout_constraintTop_toBottomOf="@+id/txtemployeelbl" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarbaglbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:minWidth="@dimen/minwidth2"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/sugarbag"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtvehiclenolbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtcollon6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/colon"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toRightOf="@+id/txtsugarbaglbl"
                    app:layout_constraintTop_toBottomOf="@+id/txtvehiclenolbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarbagval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    app:layout_constraintLeft_toRightOf="@+id/txtcollon6"
                    app:layout_constraintTop_toBottomOf="@+id/txtvehiclenolbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtvajanprakarlbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:minWidth="@dimen/minwidth2"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/vajanprakar"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarbaglbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtcollon7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/colon"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toRightOf="@+id/txtvajanprakarlbl"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarbaglbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtvajanprakarval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    app:layout_constraintLeft_toRightOf="@+id/txtcollon7"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarbaglbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtvajanprakaruni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:text="@string/kilo"
                    android:padding="@dimen/normal_margin"
                    app:layout_constraintLeft_toRightOf="@+id/txtvajanprakarval"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarbaglbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarweightlbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:minWidth="@dimen/minwidth2"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/sugarweight"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtvajanprakarlbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtcollon8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/colon"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toRightOf="@+id/txtsugarweightlbl"
                    app:layout_constraintTop_toBottomOf="@+id/txtvajanprakarlbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarweightval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    app:layout_constraintLeft_toRightOf="@+id/txtcollon8"
                    app:layout_constraintTop_toBottomOf="@+id/txtvajanprakarlbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarweightuni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/quintal"
                    app:layout_constraintLeft_toRightOf="@+id/txtsugarweightval"
                    app:layout_constraintTop_toBottomOf="@+id/txtvajanprakarlbl" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llbtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_margin"
            android:background="@color/bggrey"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clphoto">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnprev"
                style="@style/App_ButtonRedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:layout_weight="1"
                android:text="@string/prev"
                android:textSize="@dimen/normaltext"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsubmit"
                style="@style/App_ButtonGreenStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:layout_weight="1"
                android:text="@string/submit"
                android:textSize="@dimen/normaltext"
                android:visibility="visible" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>