                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/colon"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toRightOf="@+id/txtemployeelbl"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarforlbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtemployeeval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:padding="@dimen/normal_margin"
                    app:layout_constraintLeft_toRightOf="@+id/txtcollon4"
                    app:layout_constraintTop_toBottomOf="@+id/txtsugarforlbl" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtvehiclenolbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:minWidth="@dimen/minwidth2"
                    android:padding="@dimen/normal_margin"
                    android:text="@string/vehicleno"
                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtemployeelbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtcollon5"
                    android:layout_width="wrap_content"
