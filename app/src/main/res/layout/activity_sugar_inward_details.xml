                    android:textSize="@dimen/normaltext"
                    app:layout_constraintLeft_toRightOf="@+id/txtcollon2"
                    app:layout_constraintTop_toBottomOf="@+id/txtlocationlbl" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtsugarforlbl"
                    android:layout_width="wrap_content"
