<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintTestActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConnectPrinter"
        style="@style/App_ButtonGreenStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_margin"
        android:text="Connect Printer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btntestprint"
        style="@style/App_ButtonGreenStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_margin"
        android:text="Test Print"
        app:layout_constraintTop_toBottomOf="@+id/btnConnectPrinter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnexit"
        style="@style/App_ButtonGreenStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_margin"
        android:text="@string/exit"
        app:layout_constraintTop_toBottomOf="@+id/btntestprint" />

</androidx.constraintlayout.widget.ConstraintLayout>